{
  "title": "A workaround for Evernote Cmd-J high CPU issue",
  "rules": [
    {
      "description": "Map Cmd-J to Cmd-Opt-F in Evernote",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": [
                "left_command",
                "right_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.evernote\\.Evernote$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
